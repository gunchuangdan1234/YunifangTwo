<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:paddingBottom="15px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/home_webview_back_img"
            android:layout_margin="30px"
            android:src="@drawable/home_webview_back"
            android:layout_width="35px"
            android:layout_height="75px" />
        <TextView

            android:id="@+id/home_webview_title"
            android:textColor="#000"
            android:textSize="15sp"
            android:text="御泥坊美肤讲堂"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_marginRight="30px"
            android:layout_alignParentRight="true"
            android:id="@+id/home_webview_share_img"
            android:layout_margin="30px"
            android:src="@drawable/home_webview_share"
            android:layout_width="80px"
            android:layout_height="80px" />
    </RelativeLayout>
    <WebView
        android:id="@+id/home_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </WebView>

</LinearLayout>
