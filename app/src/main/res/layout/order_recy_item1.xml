<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textColor="#FC6B87"
        android:layout_margin="30px"
        android:textSize="20sp"
        android:text="待付款"
        android:id="@+id/order_recyitem1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="400px">
        <ImageView
            android:id="@+id/my_order_img22"
            android:background="#F7FBF7"
            android:src="@mipmap/guilian3"
            android:layout_margin="30px"
            android:layout_width="250px"
            android:layout_height="250px" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/order_tv_name"
                android:textColor="#323232"
                android:layout_margin="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="史蒂夫v今的少部分v今担保方"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/order_tv_price"
                    android:textColor="#323232"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="50px"
                    android:text="今天是一个"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/order_tv_number"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="50px"
                    android:text="今天是一个"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
