<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >

    <RelativeLayout
        android:layout_margin="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/setting_back_img"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/home_webview_back"/>
        <TextView
            android:textColor="#000"
            android:textSize="23sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"/>
    </RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="40px"
    android:background="#F9F9F9"/>
    <TextView
        android:id="@+id/setting_know_tv"
        android:textColor="#323232"
        android:textSize="17sp"
        android:layout_margin="50px"
        android:drawableRight="@mipmap/ico_big_right"
        android:text="购物须知"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#F9F9F9"/>
    <TextView
        android:id="@+id/setting_yijian_tv"
        android:textColor="#323232"
        android:textSize="17sp"
        android:layout_margin="50px"
        android:drawableRight="@mipmap/ico_big_right"
        android:text="意见反馈"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_margin="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/setting_qingchuhuancun_tv"
            android:layout_margin="20px"
            android:textSize="17sp"
            android:text="清除缓存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#323232"/>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/setting_yihuancun_tv"
            android:layout_margin="20px"
            android:textSize="17sp"
            android:text="已经缓存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c9c"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#F9F9F9"/>
    <RelativeLayout
        android:id="@+id/setting_my_rela"
        android:layout_margin="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/setting_my_tv"
            android:textSize="17sp"
            android:text="关于我们"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#323232"/>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_big_right"/>

        <ImageView
            android:layout_marginRight="60px"
            android:layout_alignParentRight="true"
            android:layout_width="90px"
            android:layout_height="90px"
            android:src="@mipmap/setting_my"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#F9F9F9"/>
    <RelativeLayout
        android:id="@+id/setting_phone_rela"
        android:layout_margin="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/setting_phone_tv"
            android:layout_margin="20px"
            android:textSize="17sp"
            android:text="拨打电话"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#323232"/>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/setting_phone_number_tv"
            android:layout_margin="20px"
            android:textSize="17sp"
            android:text="400-688-0900"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FC6C88"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#F9F9F9"/>
    <RelativeLayout
        android:layout_margin="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/setting_jiancha_tv"
            android:layout_margin="20px"
            android:textSize="17sp"
            android:text="检查更新"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#323232"/>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/setting_banben_tv"
            android:layout_margin="20px"
            android:textSize="17sp"
            android:text="已是最新版本"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#323232"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="#F9F9F9"/>
</LinearLayout>
