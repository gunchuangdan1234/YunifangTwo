<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="30px">

    <LinearLayout
        android:background="@drawable/biankuang3"
        android:padding="50px"
        android:layout_width="450px"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/fragment_more_goods_img"
            android:layout_width="match_parent"
            android:layout_height="400px" />
        <TextView
            android:textColor="#000"
            android:text="11111"
            android:id="@+id/fragment_more_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="100px" />
        <TextView
            android:layout_marginTop="15px"
            android:layout_marginBottom="15px"
            android:text="1111122222222222222222222222222222222"
            android:id="@+id/fragment_more_goods_jieshao"
            android:layout_width="wrap_content"
            android:layout_height="150px" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#f00"
                android:text="1111"
                android:id="@+id/fragment_more_goods_price_tv1"
                android:layout_width="wrap_content"
                android:layout_marginRight="30px"
                android:layout_height="wrap_content" />



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="1111"
                    android:layout_marginTop="7px"
                    android:id="@+id/hot_item_tv_line"
                    android:layout_centerInParent="true"
                    android:background="#ccc"
                    android:layout_width="wrap_content"
                    android:layout_height="5px" />
                <TextView
                    android:textSize="12sp"
                    android:text="1111"
                    android:id="@+id/fragment_more_goods_price_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
