<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_margin="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/address_news_back_but"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/home_webview_back"/>
        <TextView
            android:id="@+id/address_news_title_tv"
            android:textColor="#323232"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建收货地址"/>
        <TextView
            android:textColor="#FDA6B7"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:text="保存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_news_baocun_tv"/>
    </RelativeLayout>

    <LinearLayout
        android:padding="30px"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="#F9F9F9">
        <LinearLayout
            android:layout_marginTop="30px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#323232"
                android:textSize="18sp"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="收货人:"/>
            <EditText
                android:id="@+id/address_news_shouhuoren_edit"
                android:background="#fff"
                android:layout_width="0px"
                android:layout_weight="4"
                android:layout_height="150px" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#323232"
                android:textSize="18sp"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="手机:"/>
            <EditText
                android:id="@+id/address_news_phone_edit"
                android:background="#fff"
                android:layout_width="0px"
                android:layout_weight="4"
                android:layout_height="150px" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#323232"
                android:textSize="18sp"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="省市区:"/>
            <EditText
                android:id="@+id/address_news_shengshi_edit"
                android:background="#fff"
                android:layout_width="0px"
                android:layout_weight="4"
                android:layout_height="150px" />
        </LinearLayout>
        <TextView
            android:layout_marginTop="40px"
            android:textColor="#323232"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="详细地址:"/>
        <EditText
            android:id="@+id/address_news_detail_edit"
            android:layout_marginTop="30px"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="300px" />
    </LinearLayout>



</LinearLayout>
