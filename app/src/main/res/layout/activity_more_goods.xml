<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >

    <RelativeLayout
        android:layout_margin="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/more_goods_back_img"
            android:layout_width="50px"
            android:layout_height="80px"
            android:src="@drawable/home_webview_back"/>
        <TextView
            android:textSize="20sp"
            android:textColor="#4F4F4F"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部商品"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#ccc"/>

    <LinearLayout
        android:layout_marginBottom="50px"
        android:layout_marginTop="50px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/more_goods_noemal_pai_tv"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#FC7690"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="默认排序"/>

        <TextView
            android:id="@+id/more_goods_sheng_pai_tv"
            android:paddingRight="30px"
            android:drawableRight="@mipmap/asc"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#4F4F4F"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="价格升序"/>

        <TextView
            android:id="@+id/more_goods_jiang_pai_tv"
            android:paddingRight="30px"
            android:drawableRight="@mipmap/desc"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#4F4F4F"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="价格降序"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="50px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/more_goods_backgound1"
            android:background="#FC7690"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="3px" />
        <TextView
            android:id="@+id/more_goods_backgound2"
            android:background="#ccc"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="3px" />
        <TextView
            android:id="@+id/more_goods_backgound3"
            android:background="#ccc"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="3px" />
    </LinearLayout>

    <com.liaoinstan.springview.widget.SpringView

        android:id="@+id/more_goods_spring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/more_goods_recy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </com.liaoinstan.springview.widget.SpringView>

</LinearLayout>
