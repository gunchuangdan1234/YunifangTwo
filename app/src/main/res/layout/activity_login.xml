<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:id="@+id/re"
        android:padding="10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/login_back_img"
            android:layout_margin="20px"
            android:layout_width="50px"
            android:layout_height="80px"
            android:src="@drawable/home_webview_back"/>
        <TextView
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆"
            android:layout_centerHorizontal="true"
            android:layout_margin="25px"/>
        <TextView
            android:id="@+id/login_sign_tv"
            android:textColor="#FC6B87"
            android:layout_margin="25px"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"/>

    </RelativeLayout>


    <!--android:background="@mipmap/bb"-->

    <LinearLayout
        android:id="@+id/background_lin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:paddingTop="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/login_number_1"
                    android:layout_marginLeft="80px"
                    android:paddingTop="50px"
                    android:paddingBottom="50px"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="御泥坊账号登陆"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/login_phone_1"
                    android:layout_marginRight="80px"
                    android:paddingTop="50px"
                    android:paddingBottom="50px"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="手机快速登陆"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:paddingTop="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="#FC6B87"
                    android:id="@+id/login_number_2"
                    android:background="@drawable/shape_login_tv"
                    android:layout_marginLeft="80px"
                    android:paddingTop="50px"
                    android:paddingBottom="50px"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="460px"
                    android:text="御泥坊账号登陆"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#FC6B87"
                    android:id="@+id/login_phone_2"
                android:background="@drawable/shape_login_tv"
                    android:layout_marginRight="80px"
                    android:paddingTop="50px"
                    android:paddingBottom="50px"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_width="460px"
                    android:visibility="invisible"
                    android:text="手机快速登陆"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </FrameLayout>

        <EditText
            android:paddingLeft="10px"
            android:id="@+id/login_edit_phone"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:hint="  手机号"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="180px" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:paddingLeft="10px"
                android:layout_marginTop="30px"
                android:id="@+id/login_edit_pass"
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:hint="  密码"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="180px" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/login_code_lin"
                android:orientation="horizontal"
                android:layout_marginLeft="80px"
                android:layout_marginRight="80px"
                android:layout_marginTop="30px"
                android:layout_width="match_parent"
                android:layout_height="180px">
                <EditText

                    android:padding="10px"
                    android:id="@+id/login_edit_code"
                    android:background="#fff"
                    android:hint="  验证码"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/login_tv_getcode"
                    android:textColor="#FC6B87"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:background="#fff"
                    android:layout_marginLeft="20px"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="获取验证码"/>
            </LinearLayout>
        </FrameLayout>
        <Button
            android:id="@+id/login_but"
            android:layout_marginLeft="80px"
            android:layout_marginRight="80px"
            android:layout_marginTop="120px"
            android:background="#FC6B87"
            android:text="登陆"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/login_guanggao_img"
            android:layout_marginTop="30px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_first"/>


    <TextView
        android:id="@+id/disanfang_tv"
        android:drawableRight="@mipmap/youjiantou"
        android:layout_marginTop="100px"
        android:textSize="16sp"
        android:textColor="#FC6B87"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="第三方快速登录 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/disanfang_youjiantou"
            android:background="#FC6B87"
            android:layout_marginLeft="360px"
            android:layout_width="320px"
            android:layout_height="3px" />


        <TextView
            android:id="@+id/disanfang_tv_jieshao"
            android:layout_marginTop="30px"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="第三方快速登录不享受任何任何御泥坊会员权益"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>
