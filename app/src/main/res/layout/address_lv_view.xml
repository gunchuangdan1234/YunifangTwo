<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
<TextView
    android:id="@+id/address_lv_backgorund1"
    android:layout_width="match_parent"
    android:layout_height="50px"
    android:background="#f7f7f7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_margin="20px"
        android:orientation="vertical"
        android:layout_width="0px"
        android:layout_weight="3"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/address_lv_name"
            android:layout_marginBottom="30px"
            android:textSize="17sp"
            android:text="孙梦龙"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/address_lv_address"
            android:textSize="17sp"
            android:text="北京市海淀区"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="20px"
        android:orientation="horizontal"
        android:layout_width="0px"
        android:layout_weight="2"
        android:layout_height="200px">
        <TextView
            android:id="@+id/address_lv_phone"
            android:textSize="17sp"
            android:text="孙梦龙"
            android:layout_width="230px"
            android:layout_height="wrap_content" />
        <CheckBox
            android:focusable="false"
            android:id="@+id/address_lv_check"
            android:layout_marginLeft="50px"
            android:layout_gravity="center"
            android:button="@null"
            android:drawableRight="@drawable/sopping_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/address_lv_backgorund2"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:background="#f7f7f7"/>
</LinearLayout>
