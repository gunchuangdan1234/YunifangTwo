<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sopping_title_tv"
            android:layout_margin="50px"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车"/>
        <TextView
            android:id="@+id/sopping_change_tv"
            android:textColor="#FC6B87"
            android:gravity="center"
            android:layout_margin="50px"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"/>
    </RelativeLayout>

    <TextView
        android:background="#F9F9F9"
        android:layout_width="match_parent"
        android:layout_height="15px" />

    <com.bawei.yunifang.view.XListView
        android:id="@+id/sopping_xlv"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1">

    </com.bawei.yunifang.view.XListView>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="30px"
        android:layout_width="fill_parent"
        android:layout_height="150px">
        <CheckBox
            android:id="@+id/sopping_quanxuan"
            android:text="    全选"
            android:textColor="@color/tv_color"
            android:layout_width="0px"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/sopping_check"/>

        <TextView
            android:id="@+id/sopping_zhongjia"
            android:gravity="center"
            android:text="总计：￥0.00"
            android:layout_width="0px"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/jiesuan_but"
            android:background="#FC6B87"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结算"/>
    </LinearLayout>

</LinearLayout>
