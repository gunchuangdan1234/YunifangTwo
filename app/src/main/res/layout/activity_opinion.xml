<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:padding="35px"
        >
        <ImageView
            android:id="@+id/opinion_back_img"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/home_webview_back"/>
        <TextView
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/opinion_write_tv"
        android:textColor="#FC6B87"
        android:drawableRight="@mipmap/next_icon"
        android:textSize="16sp"
        android:layout_margin="50px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="填写您的联系信息"/>
</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="#FC6B87">
        <EditText
            android:layout_margin="15px"
            android:background="#fff"
            android:layout_gravity="center"
            android:layout_width="0px"
            android:layout_weight="9"
            android:layout_height="120px" />
        <TextView
            android:textSize="17sp"
            android:textColor="#fff"
            android:text="发送"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0px"
            android:layout_weight="1.5"
            android:layout_height="120px" />
    </LinearLayout>

</RelativeLayout>
