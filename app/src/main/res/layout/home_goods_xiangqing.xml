<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170px">

    <RelativeLayout
        android:id="@+id/goods_xiangqing_dingbu_rela"
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:padding="35px"
        >
        <ImageView
            android:id="@+id/goods_back_img"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@drawable/home_webview_back"/>
        <TextView
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品详情"/>
        <ImageView
            android:id="@+id/goods_shopping_img"
            android:layout_marginRight="150px"
            android:layout_alignParentRight="true"
            android:src="@mipmap/shopping"
            android:layout_width="100px"
            android:layout_height="100px" />
        <ImageView
            android:id="@+id/goods_share_img"
            android:layout_alignParentRight="true"
            android:src="@drawable/home_webview_share"
            android:layout_width="100px"
            android:layout_height="100px" />
    </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/search01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <com.bawei.yunifang.view.MyScollView
        android:id="@+id/home_myscollview"
        android:layout_width="match_parent"
        android:layout_height="5000px"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/goods_xiangqing_dingbu_lin"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.bawei.yunifang.view.MyRoolViewPagerNoScoll
                    android:id="@+id/goods_vp"
                    android:layout_width="match_parent"
                    android:layout_height="930px">

                </com.bawei.yunifang.view.MyRoolViewPagerNoScoll>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/goods_dot"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"></LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_margin="20px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_marginTop="50px"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="#000"
                        android:layout_marginLeft="20px"
                        android:textSize="17sp"
                        android:id="@+id/goods_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="你的滑鸡面膜的出你的"/>
                    <LinearLayout
                        android:layout_margin="20px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_margin="15px"
                            android:textColor="#FC6B87"
                            android:textSize="18sp"
                            android:id="@+id/goods_shop_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥200"/>
                        <TextView
                            android:layout_margin="15px"
                            android:id="@+id/goods_first_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥139"/>
                        <ImageView

                            android:id="@+id/goods_di_img"
                            android:layout_margin="15px"
                            android:layout_width="70px"
                            android:layout_height="70px"
                            android:src="@mipmap/pledge"/>
                    </LinearLayout>
                </LinearLayout>
                    <TextView
                        android:id="@+id/goods_shoucang_tv"
                        android:drawableTop="@mipmap/collection"
                        android:layout_margin="30px"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="#F9F9F9"/>
            <TextView
                android:id="@+id/goods_tv1"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:drawableRight="@mipmap/fanjiantou"
                android:text="邀请有礼270元面膜免费领"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="#F9F9F9"/>
            <TextView
                android:id="@+id/goods_tv2"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:drawableRight="@mipmap/fanjiantou"
                android:text="邀请有礼270元面膜免费领"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="#F9F9F9"/>
            <TextView
                android:id="@+id/goods_tv3"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:drawableRight="@mipmap/fanjiantou"
                android:text="邀请有礼270元面膜免费领"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

            <LinearLayout
                android:id="@+id/search02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/goods_xangqing_rela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:textColor="#FC6B87"
                    android:layout_margin="60px"
                    android:id="@+id/goods_goods_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品详情"/>
                <TextView
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_margin="60px"
                    android:id="@+id/goods_parameter_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品参数"/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_margin="60px"
                    android:id="@+id/goods_comment_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论(574)"/>
            </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:background="#F9F9F9"/>
            <com.bawei.yunifang.view.MyListView
                android:layout_marginTop="20px"
                android:id="@+id/goods_lv"
                android:layout_width="match_parent"
                android:layout_height="9000px">

            </com.bawei.yunifang.view.MyListView>
        </LinearLayout>
    </com.bawei.yunifang.view.MyScollView>
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="167px">

        <TextView
            android:id="@+id/goods_kefu_tv"
            android:gravity="center"
            android:textSize="16sp"
            android:drawableLeft="@mipmap/public_contact_service_icon5"
            android:layout_margin="50px"
            android:text=" 客服"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/goods_jia_shopping_tv"
            android:background="#FBD140"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="240px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="加入购物车"/>
        <TextView
            android:id="@+id/goods_buy_tv"
            android:background="#FC6B87"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="立即购买"/>
    </RelativeLayout>

</LinearLayout>
