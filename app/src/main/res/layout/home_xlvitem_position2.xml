<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#f00"
    >

    <LinearLayout
        android:background="@drawable/biankuang3"
        android:padding="50px"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/fragment_position3_img"
            android:layout_width="match_parent"
            android:layout_height="400px" />
        <TextView
            android:textColor="#000"
            android:text="11111"
            android:id="@+id/fragment_position3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="15px"
            android:layout_marginBottom="15px"
            android:text="111112222"
            android:id="@+id/fragment_position3_jieshao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#f00"
                android:text="1111"
                android:id="@+id/fragment_position3_price_tv1"
                android:layout_width="wrap_content"
                android:layout_marginRight="30px"
                android:layout_height="wrap_content" />



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="1111"
                    android:layout_marginTop="7px"
                    android:id="@+id/hot_item_tv_line"
                    android:layout_centerInParent="true"
                    android:background="#ccc"
                    android:layout_width="wrap_content"
                    android:layout_height="5px" />
                <TextView
                    android:textSize="12sp"
                    android:text="1111"
                    android:id="@+id/fragment_position3_price_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:background="@drawable/biankuang3"
        android:padding="50px"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/fragment_two_position3_img"
            android:layout_width="match_parent"
            android:layout_height="400px" />
        <TextView
            android:textColor="#000"
            android:text="11111"
            android:id="@+id/fragment_two_position3_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="15px"
            android:layout_marginBottom="15px"
            android:text="111112222"
            android:id="@+id/fragment_two_position3_jieshao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textColor="#f00"
                android:text="1111"
                android:id="@+id/fragment_two_position3_price_tv1"
                android:layout_width="wrap_content"
                android:layout_marginRight="30px"
                android:layout_height="wrap_content" />



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="1111"
                    android:layout_marginTop="7px"
                    android:id="@+id/hot_two_item_tv_line"
                    android:layout_centerInParent="true"
                    android:background="#ccc"
                    android:layout_width="wrap_content"
                    android:layout_height="5px" />
                <TextView
                    android:textSize="12sp"
                    android:text="1111"
                    android:id="@+id/fragment_two_position3_price_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
